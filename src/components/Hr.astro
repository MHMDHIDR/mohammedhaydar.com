---
export interface Props {
  children?: string;
  className?: string;
}

const { children = "", className = "" } = Astro.props;
---

<div
  class={`flex container mx-auto relative justify-center items-center m-6 before:[background:linear-gradient(90deg,transparent,#555,transparent)] dark:before:[background:linear-gradient(90deg,transparent,#999,transparent)] before:absolute before:left-0 before:top-1/2 before:w-full before:h-px${
    className ? " " + className : ""
  }`}
>
  {
    children ? (
      <span class="z-10 px-2 bg-white dark:text-neutral-200 dark:bg-gray-800">
        {children}
      </span>
    ) : null
  }
</div>
