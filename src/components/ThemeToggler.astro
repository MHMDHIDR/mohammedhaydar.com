<label
  aria-label="auto"
  aria-live="polite"
  class="ltr relative h-[calc(var(--drkModeToggleSize)/3)] w-[calc(var(--drkModeToggleSize)/1.15)] cursor-pointer overflow-clip"
>
  <input
    id="theme-toggler"
    class="theme-toggler peer pointer-events-none absolute h-6 w-6 opacity-0 sm:h-12 sm:w-12"
    type="checkbox"
    aria-label="Dark Mode Toggler Checkbox"
    title="Dark Mode Toggler Checkbox"
  />

  {/* Toggle pill */}
  <div
    class="absolute h-full w-full rounded-full border-2 border-solid border-gray-500 shadow-lg transition-colors duration-300 peer-checked:bg-gray-700 dark:border-gray-200"
  >
  </div>

  {/* Lightmode sun */}
  <div
    class="absolute origin-[50%_50%] translate-x-[calc(var(--drkModeToggleSize)/10)] translate-y-[calc(var(--drkModeToggleSize)/22)] rotate-12 opacity-100 transition-all duration-300 peer-checked:translate-x-12 peer-checked:translate-y-8 peer-checked:-rotate-0 peer-checked:opacity-0"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      xmlns-xlink="http://www.w3.org/1999/xlink"
      aria-hidden="true"
      focusable="false"
      preserveAspectRatio="xMidYMid meet"
      viewBox="0 0 24 24"
      class="absolute h-[calc(var(--drkModeToggleSize)/4.5)] w-[calc(var(--drkModeToggleSize)/4.5)] text-yellow-600"
      data-icon="feather-sun"
      data-inline="false"
    >
      <g
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="12" cy="12" r="5"></circle>
        <path d="M12 1v2"></path>
        <path d="M12 21v2"></path>
        <path d="M4.22 4.22l1.42 1.42"></path>
        <path d="M18.36 18.36l1.42 1.42"></path>
        <path d="M1 12h2"></path>
        <path d="M21 12h2"></path>
        <path d="M4.22 19.78l1.42-1.42"></path>
        <path d="M18.36 5.64l1.42-1.42"></path>
      </g>
    </svg>
  </div>

  {/* Lightmode moon */}
  <div
    class="absolute h-[calc(var(--drkModeToggleSize)/4.5)] w-[calc(var(--drkModeToggleSize)/4.5)] translate-x-[calc(var(--drkModeToggleSize)/1.8)] translate-y-[calc(var(--drkModeToggleSize)/20)] rounded-full bg-yellow-100 shadow-[inset_0_0_0_0.13em] shadow-orange-300 transition-all duration-300 peer-checked:translate-x-[calc(var(--drkModeToggleSize)/20)] peer-checked:bg-[#485367] peer-checked:shadow-white"
  >
  </div>

  {/* Darkmode moon */}
  <div
    class="absolute origin-[50%_50%] translate-x-24 translate-y-2 rotate-0 opacity-0 transition-all duration-300 peer-checked:translate-x-[calc(var(--drkModeToggleSize)/1.9)] peer-checked:translate-y-[calc(var(--drkModeToggleSize)/15)] peer-checked:-rotate-[15deg] peer-checked:opacity-100"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      xmlns-xlink="http://www.w3.org/1999/xlink"
      aria-hidden="true"
      focusable="false"
      preserveAspectRatio="xMidYMid meet"
      viewBox="0 0 24 24"
      class="absolute h-[calc(var(--drkModeToggleSize)/3.5)] w-[calc(var(--drkModeToggleSize)/3.5)] text-orange-300"
      data-icon="feather-moon"
      data-inline="false"
    >
      <g
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M21 12.79A9 9 0 1 1 11.21 3A7 7 0 0 0 21 12.79z"></path>
      </g>
    </svg>
  </div>
</label>
